{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "noImplicitAny": false,
      "forceConsistentCasingInFileNames": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true
   },
   "include": [
      "./src/**/*"
   ],
   "exclude": [
      "node_modules"]
}